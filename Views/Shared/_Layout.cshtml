<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LGI > EDA > @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.lineicons.com/4.0/lineicons.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/EDA.styles.css" asp-append-version="true" /> *@

</head>
<body>
    <div class="wrapper">
        <aside id="sidebar">
            <div class="d-flex">
                <button class="toggle-btn" type="button">
                    <img src="~/images/lgi-logo-blue.png" width="32" height="32" alt="LGI" title="The Lauridsen Group" />
                </button>
                <div class="sidebar-logo">
                    <a href="#">The Lauridsen Group</a>
                </div>
            </div>
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-controller="Home" asp-action="Index">
                        <i class="lni lni-dashboard" title="Dashboard"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-controller="Orders" asp-action="Index">
                        <i class="lni lni-layers" title="Orders"></i>
                        <span>Orders</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-controller="Customers" asp-action="Index">
                        <i class="lni lni-customer" title="Customers"></i>
                        <span>Customers</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#masters" aria-expanded="false" aria-controls="masters">
                        <i class="lni lni-grid-alt" title="Masters"></i>
                        <span>Masters</span>
                    </a>
                    <ul id="masters" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">                        
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Masters" asp-action="ConsigneeTypes">ConsigneeTypes</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Masters" asp-action="ContainerSizes">ContainerSizes</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Masters" asp-action="Incoterms">Incoterms</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Masters" asp-action="PaperWorksList">PaperWorksList</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Masters" asp-action="PaymentTerms">PaymentTerms</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Masters" asp-action="Ports">Ports</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Masters" asp-action="Products">Products</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Masters" asp-action="ShipVia">ShipVia</a>
                        </li>
                    </ul>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-controller="CommCenter" asp-action="Index">
                        <i class="lni lni-popup" title="Comm Center"></i>
                        <span>CommCenter</span>
                    </a>
                </li>

                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#settings" aria-expanded="false" aria-controls="settings">
                        <i class="lni lni-cog" title="Settings"></i>
                        <span>Settings</span>
                    </a>
                    <ul id="settings" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Settings" asp-action="Companies">Companies</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Settings" asp-action="Countries">Countries</a>

                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Settings" asp-action="PlantLocations">PlantLocations</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Settings" asp-action="Users">Users</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Settings" asp-action="Index">Others</a>
                        </li>
                    </ul>
                </li>
                @* <div class="sidebar-footer">
                    <a href="#" class="sidebar-link">
                        <i class="lni lni-exit"></i>
                        <span>Logout</span>
                    </a>
                </div> *@
            </ul>
        </aside>
        <div class="main">
            <nav class="navbar navbar-expand px-4 py-3">
                <form action="#" class="d-none d-sm-inline-block">
                </form>
                <div class="app-title">
                    Export & Domestic Application
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a href="#" data-bs-toggle="dropdown" class="nav-icon pe-md-0 header_img">
                                <img src="~/images/KMK.jpg" class="avatar img-fluid" alt="">
                            </a>
                            <div class="dropdown-menu dropdown-menu-end rounded">
                                <ul>
                                    <li>Account</li>
                                    <li>Preferences</li>
                                    <li>Logout</li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <main class="content px-3 py-4">
                <div class="container-fluid">
                    <div>
                        @RenderBody()
                    </div>
                    
                </div>
            </main>
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row text-body-secondary">
                        <div class="col-4 text-start">
                            <a class="text-body-secondary" href="#">
                                <strong>The Lauridsen Group &copy; 2024</strong>
                            </a>
                        </div>
                        <div class="col-4 text-start">
                            <a class="text-body-secondary" href="#">
                                Developed & Maintained by <a href="#">WISSEN INFOTECH</a>
                            </a>
                        </div>
                        <div class="col-4 text-end text-body-secondary d-none d-md-block">
                            <ul class="list-inline mb-0">
                                <li class="list-inline-item">
                                    <a class="text-body-secondary" href="#">Privacy Policy</a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="text-body-secondary" href="#">Terms & Conditions</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
